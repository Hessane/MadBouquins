{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    {% if not is_granted("IS_AUTHENTICATED_REMEMBERED") %}
<div class="dropdown-menu" style="padding: 15px; padding-bottom: 19px;">

    <form method="post" action="{{ path("fos_user_security_check") }}" accept-charset="UTF-8">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        <input style="margin-bottom: 15px;" type="text" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="Adresse email"  >
        <input style="margin-bottom: 15px;" type="password" id="password" name="_password" required="required"  placeholder="Mot de passe"  >
        <input style="float: left; margin-right: 10px;" type="checkbox" id="remember_me" name="_remember_me" value="on" >
        <label class="string optional" for="user_remember_me"> Se souvenir</label>
        <input class="btn btn-warning btn-block" type="submit" id="_submit" name="_submit" value="Se connecter">
        <p><center><a href="{{ path('bouquins_front_register')}}">S'inscrire</a></center></p>
        <center><a href="#">Mot de passe oubli√©?</a></center>
    </form>

    {% endif %}


{% endblock fos_user_content %}
